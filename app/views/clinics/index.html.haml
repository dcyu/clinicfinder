%h2=t('closest_clinics')

-if @current_location
  %h4
    =t('current_location')+':'
    #{@current_location.first}, #{@current_location.last}

#map
=render 'index_map'

#clinics
  / %input.search{:placeholder => "Search"}/
  
  %ul.list
    -@clinics_sorted_by_distance.each do |clinic|
      %li
        %a.list-link{:href => "#{clinic_path(clinic.first)}", 'data-no-turbolink' => true}
          %span.name
            =clinic.first.name
          %span.distance
            =clinic.last
            =t('km')

  %ul.pagination

.row
  .col-md-12.text-center
    %a.btn{:href => "#{new_clinic_path}"}
      %h3
        =t('add_clinic')


:javascript
  var options = {
    valueNames: [ 'name', 'address', 'hours', 'distance' ],
    plugins: [ListPagination({})]
  };

  var userList = new List('clinics', options);


