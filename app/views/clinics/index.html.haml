%h2=t('all_clinics')

-if @current_location
  %h4
    =t('current_location')+':'
    #{@current_location.city_name}, #{@current_location.country_name}

#clinics
  / %input.search{:placeholder => "Search"}/
  
  %ul.list
    -@clinics_sorted_by_distance.each do |clinic|
      %li
        %a.list-link{:href => "#{clinic_path(clinic.first)}", 'data-no-turbolink' => true}
          %span.name
            =clinic.first.name
          %span.distance
            =clinic.last
            =t('km')

  %ul.pagination

:javascript
  var options = {
    valueNames: [ 'name', 'address', 'hours', 'distance' ],
    plugins: [ListPagination({})]
  };

  var userList = new List('clinics', options);

= link_to 'Add New Clinic', new_clinic_path
