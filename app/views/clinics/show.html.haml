%h2
  =@clinic.name
  =t('clinic_clarifier')

#map
=render 'map'

.row
  .col-md-12
    .panel.panel-info.dark
      .panel-body
        %p
          %b
            =t('address')+':'
          %br/
          = @clinic.address

        -if @clinic.organization.present?
          %p
            %b=t('organization')+':'
            = @clinic.organization
          %br/

        -if @clinic.phone.present?
          %p
            %b=t('phone_number')+':'
            = @clinic.phone
          %br/

        %p
          %b=t('operating_hours')+':'
          -@shifts.each do |shift|
            %span.shift
              %span.days
                =t(shift.day)
              %span.times
                #{shift.opening_time}-#{shift.closing_time}
                -if shift.opening_time2.present?
                  =t('and')
                  #{shift.opening_time2}-#{shift.closing_time2}

        %p
          %b=t('services_offered')+':'
          -@capabilities.each do |c|
            %span.shift
              %span.days
                =t(c.topic.name)
        %p
          %b=t('cost')+':'
          =t(@clinic.cost)
        %p
          %b=t('appointment')+':'
          =t(@clinic.scheduling)
        %p
          %b=t('eligibility')+':'
          =t(@clinic.eligibility)

.row
  .col-md-12.text-center
    %a.btn{:href => "#{edit_clinic_path(@clinic)}"}
      %h3
        =t('edit_clinic')